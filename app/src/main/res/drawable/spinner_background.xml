<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape android:shape="rectangle"
                    >

                    <corners
                        android:radius="10dp"
                        />

                    <solid
                        android:color="@color/white"
                        />

                    <stroke
                        android:width="2dp"
                        android:color="#BCB2B2"
                        />
                </shape>
            </item>

            <item android:right="5dp">

                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_arrow_white" />

            </item>

        </layer-list>

    </item>

</selector>